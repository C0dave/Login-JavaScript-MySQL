<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="resources/css/style.css">
    <title>Register</title>
</head>
<body style="background-image: linear-gradient(to right,rgb(255, 251, 0),rgb(255, 0, 0));
             background-repeat: no-repeat;
             background-size: 100% 675px;">
    <div class="register-form">
        <h1>Registro</h1>
        <form action="/register" method="post">
            <label for="user">Nombre de usuario</label>
            <input type="text" name="user" required>

            <label for="user">Nombre Completo</label>
            <input type="text" name="name" required>

            <label for="rol">Rol</label>
            <select name="rol" id="rol" class="select-css">
                <option value="admin" selected>Administrador</option>
                <option value="data entry">Entrada de datos</option>
            </select>
            <label for="pass">Contrase√±a</label>
            <input type="password" name="pass" required>

            <div style="display: inline;">
                <a href="/login" class="btn-cancel">Ya tengo una cuenta</a>
                <input type="submit" class="btn-save" value="Guardar" style="float: inline-end;">
            </div>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


    <% if(typeof alert !== "undefined"){ %>
    <script>
        Swal.fire({
            title: '<%= alertTitle%>',
            text: '<%= alertMessage %>',
            icon: '<%= alertIcon %>',
            showConfirmButton: <%= showConfirmButton %>,
            timer: <%= timer %>
        }).then(()=>{
            window.location = '/ <%= ruta%>';
        })
    </script>
    <% } %>
</body>
</html>